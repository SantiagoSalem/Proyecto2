{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	<div class="container well">
	    <div class="col-md-9">
	    <h2>{{ user.username }}</h2>
	        <br>
	        <dl>
	            <dt>Usuario</dt>
	            <dd>
	                {{ user.username }}
	                &nbsp;
	            </dd>
	            <br>

	            <dt>Rol</dt>
	            <dd>
                	{% if user.role == 'ROLE_ADMIN' %}
        						Administrador
					        {% elseif user.role == 'ROLE_EDITOR' %}
        						Editor
                	{% endif %}
	                &nbsp;
	            </dd>
	            <br>

	            <dt>Activo</dt>
	            <dd>
                	{% if user.isActive == 1 %}
						            <span class="text-success">Habilitado</span>
					        {% elseif user.isActive == 0 %}
						            <span class="text-warning">Deshabilitado</span>
                	{% endif %}
	                &nbsp;
	            </dd>
	            <br>
	        </dl>
	    </div>
	    <div class="col-md-3">
	    	<h3>Acciones</h3>
			<p>
		    	<a href="{{ path('iaw_user_edit', { id: user.id }) }}" class="btn btn-primary btn-lg btn-block">
		    		<span class="glyphicon glyphicon-edit"></span>
		        	Editar usuario
				 </a>
			</p>
      <p>
				{{ include('IAWUserBundle:User:forms/form.html.twig', {form: delete_form}) }}
      </p>

	    </div>
	</div>
{% endblock %}
