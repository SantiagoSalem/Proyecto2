{% extends 'layout.html.twig' %}
{% block body %}
  {{ parent() }}
  <div class="progress hidden" id="delete-progress">
  <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
    <span class="sr-only">Cargando...</span>
  </div>
</div>
  <div class="container">
    <div class="col-md-12">
      <div class="page-header margin-none">
        <h2 class="padding-none">Estadisticas</h2>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-hover" id="tablaAjustada">
          <thead>
              <tr>
                  <th style="width: 50px;">#</th>
                  <th>Equipo</th>
                  <th>PJ</th>
                  <th>PG</th>
                  <th>PE</th>
                  <th>PP</th>
                  <th>DG</th>
                  <th>PT</th>
              </tr>
          </thead>
          <tbody>
              {% for estadistica in estadisticas %}
                  <tr data-id="{{ estadistica.id }}">
                      <td>{{ loop.index }}
                      <td>
                        {% if estadistica.imagenEquipo != '' %}
                             <img src="{{ asset('uploads/' ~ estadistica.imagenEquipo) }}" style="width:30px;height:30px;" />
                         {% else %}
                             <img src="{{ asset('uploads/noImage.png') }}" style="width:30px;height:30px;" />
                         {% endif %}
                        {{estadistica.equipo}}
                       </td>
                      <td>{{estadistica.pj}}</td>
                      <td>{{estadistica.pg}}</td>
                      <td>{{estadistica.pe}}</td>
                      <td>{{estadistica.pp}}</td>
                      <td>{{estadistica.dg}}</td>
                      <td>{{estadistica.puntos}}</td>
                  </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

{% endblock %}
